{
    "overrides": [
        {
            "files": "*.sol",
            "options": {
                "printWidth": 120,
                "tabWidth": 4,
                "useTabs": false,
                "singleQuote": false,
                "bracketSpacing": true,
                "explicitTypes": "always"
            }
        },
        {
            "files": "*.ts",
            "options": {
                "printWidth": 200,
                "tabWidth": 2,
                "useTabs": false,
                "singleQuote": false,
                "bracketSpacing": true,
                "semi": false,
                "explicitTypes": "always"
            }
        }
    ]
}